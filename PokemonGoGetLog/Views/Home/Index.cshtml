@using PagedList
@using PagedList.Mvc;
@model IPagedList<PokemonGoGetLog.Models.PokemonGetData>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("新規作成", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].PokemonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Cp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].User)
        </th>
        <th>
            日づけ
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img id="image" style="max-width:24px" src="~/Content/wiki/@(item.PokemonImageName).png" />
                @Html.DisplayFor(modelItem => item.PokemonName)
            </td>
            <td>
                @item.Position.Split()[2]
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @item.CreateDateTime.ToShortDateString()
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page} ))